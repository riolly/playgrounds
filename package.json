{
  "name": "playgrounds",
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @playground/db push",
    "db:studio": "turbo -F @playground/db studio",
    "dev": "turbo watch dev",
    "dev:next": "turbo watch dev -F @playground/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "build:mobile-dev": "pnpm -F @playground/expo build:dev",
    "build:mobile-prev": "pnpm -F @playground/expo build:prev",
    "build:mobile-prod": "pnpm -F @playground/expo build:prod"
  },
  "devDependencies": {
    "@playground/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.6",
    "prettier": "catalog:",
    "turbo": "^2.0.6",
    "typescript": "catalog:"
  },
  "prettier": "@playground/prettier-config"
}
